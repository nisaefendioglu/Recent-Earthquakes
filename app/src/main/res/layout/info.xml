<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/what_is_earthquake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/what_is_earthquake"
            android:textColor="#C5261A"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/earthquake_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/earthquake_description"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/why_earthquake_occurs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/why_earthquake_occurs"
            android:textColor="#C5261A"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/why_earthquake_occurs_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/why_earthquake_occurs_description"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>
</ScrollView>